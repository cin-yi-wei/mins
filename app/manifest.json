{
  "name": "mins",
  "description": "A community sharing score distributions",
  "version": "1.0.0",
  "manifest_version": 2,
  "permissions": [
    "https://*.ifsel3.aca.ntu.edu.tw/*",
    "https://mighty-woodland-62500.herokuapp.com/*"
  ],
  "background": {
    "scripts": [
      "src/background/handler.js",
      "src/background/ntu/parseNtuTranscriptToJson.js",
      "src/background/ntu/loadNtuTranscript.js",
      "src/background/fetchEnrollments.js",
      "src/background/addListener.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://nol.ntu.edu.tw/nol/coursesearch/*"
      ],
      "js": [
        "src/content_script/ntu/fetchMessage.js",
        "src/content_script/ntu/fetchTranscript.js",
        "src/content_script/ntu/loadCourses.js",
        "src/content_script/ntu/course_search/parseToJson.js",
        "src/content_script/ntu/course_search/insertPresentation.js",
        "src/content_script/ntu/course_search/main.js"
        ],
      "all_frames": true
    }
  ],
  "icons": {
    "128": "images/mins128.png"
  }
}
